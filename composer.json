{
    "name": "bbrala/php7-mysql-shim",
    "description": "A PHP 7 shim for ext/mysql. Temporary which doesn't break old PHP's",
    "license": "MIT",
    "authors": [
        {
            "name": "Davey Shafik",
            "email": "me@daveyshafik.com",
            "homepage": "https://daveyshafik.com"
        }
    ],
    "require": {
        "php": ">=5.3.6",
        "ext-mysqli": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^8.4"
    },
    "autoload": {
        "files": ["lib/mysql.php"]
    },
    "scripts": {
        "test": "phpunit",
        "fix-cs": [
            "phpcbf --standard=PSR1,PSR2 ./libs ./tests",
            "php-cs-fixer fix --rules=@PSR2 ./lib",
            "php-cs-fixer fix --rules=@PSR2 ./tests"
        ]
    }
}
